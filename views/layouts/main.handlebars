<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN'
      crossorigin='anonymous'
    />
    <link href='/stylesheets/style-home.css' rel='stylesheet' />
    <title>Infinite Echoes</title>
  </head>
  <body>
    <header>
      <div class='row justify-content-between'>
        <div class='header-left col-md-6 col-12'>
          <h2>Infinite Echoes</h2>
        </div>
        <div class='header-right col-md-6 col-12'>
          <ul class='row'>
            <li class='col-sm-12 col-md-4 text-center align-items-center'>
              <a href='/' class='nav-a'>Home</a>
            </li>
            <li class='col-sm-12 col-md-4 text-center'>
              <a href='/dashboard/' class='nav-a'>Dashboard</a>
            </li>
            <li class='col-sm-12 col-md-4 text-center'>
              {{#if loggedIn}}
                <button id='logout-btn'>Logout</button>
              {{else}}
                <a href='/login' class='nav-a'>Login</a>
              {{/if}}
            </li>
          </ul>
        </div>
      </div>
    </header>
    <main class='row'>
      {{{body}}}
    </main>
    <footer>
      <h3>Made by Kyle Etrata</h3>
      <p>2023, Enormous_Elephant, Inc</p>
    </footer>
  </body>
  {{#if loggedIn}}
    <script src='/scripts/logout.js'></script>
  {{/if}}

</html>