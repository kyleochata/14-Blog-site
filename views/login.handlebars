<section class='card'>
  <div class='card-header'>
    <h2>Login</h2>
  </div>
  <form id='login-form' class='card-body'>
    <div>
      <label for='email-input-login'>Email</label>
      <input type='email' id='email-login' placeholder="'johndoe@email.com" />
    </div>
    <div>
      <label for='password-input-login' class='form-label'>Password</label>
      <input type='password' id='password-login' placeholder='password123' />
    </div>
    <button type='submit' id='login-btn' class='btn'>Login!</button>
  </form>
</section>

<section>
  <header>
    <h2>Sign Up</h2>
  </header>
  <form id='signup-form'>
    <div>
      <label for='signup-email'>Email</label>
      <input
        type='email'
        id='email-input-signup'
        placeholder='johndoe@email.com'
      />
    </div>
    <div>
      <label for='signup-username'>Username</label>
      <input type='text' id='username-input-signup' placeholder='password123' />
    </div>
    <div>
      <label for='password'>Password:
        <p>Must be longer than 6 characters. Numbers and letters only</p>
      </label>
      <input type='password' id='password-input-signup' />
    </div>
    <button type='submit' id='signup-btn' class='btn'>Sign Up!</button>
  </form>
</section>

<script src='./scripts/login.js'></script>