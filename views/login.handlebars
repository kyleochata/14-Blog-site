<section class='login-page'>
  <section>
    <header class='card-header'>
      <h2>Login</h2>
    </header>
    <form id='login-form' class='card-body'>
      <div>
        <div>
          <label for='email-login'>Email</label>
        </div>
        <div>
          <input
            type='email'
            id='email-login'
            placeholder="'johndoe@email.com"
          />
        </div>
      </div>
      <div>
        <div>
          <label for='password-login' class='form-label'>Password</label>
        </div>
        <div>
          <input
            type='password'
            id='password-login'
            placeholder='password123'
          />
        </div>
      </div>
      <div class='form-btn'>
        <button type='submit' id='login-btn' class='btn'>Login!</button>
      </div>
    </form>
  </section>

  <section>
    <header class='card-header'>
      <h2>Sign Up</h2>
    </header>
    <form class='signup-form' class='card-body'>
      <div>

        <div>
          <label for='email-input-signup'>Email</label>
        </div>

        <div>
          <input
            type='email'
            id='email-input-signup'
            placeholder='johndoe@email.com'
          />
        </div>

      </div>

      <div>

        <div>
          <label for='username-input-signup'>Username</label>
        </div>

        <div>
          <input type='text' id='username-input-signup' placeholder='johnDoe' />
        </div>

      </div>

      <div>

        <div>
          <label for='password-input-signup'>Password:
            <span class='signup-form-p'>Must be longer than 6 characters.
              Numbers and letters only</span>
          </label>
        </div>

        <div>
          <input type='password' id='password-input-signup' />
        </div>

        <div class='form-btn'>
          <button type='submit' id='signup-btn' class='btn'>Sign Up!</button>
        </div>

      </div>
    </form>
  </section>
</section>

<script src='./scripts/login.js'></script>